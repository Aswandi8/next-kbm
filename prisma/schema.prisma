// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js" 
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  username  String 
  email     String    @unique 
  password  String
  role      String
  photo     String?
  type      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}

model dataSparepart{
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  sparepart String
  produksi  String
  types     dataType[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  
}

model dataType{
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  type         String
  merek        String?
  stock        Int
  spesifikasi  String
  product      dataSparepart   @relation(fields: [productId], references: [id])
  productId    String          @db.ObjectId
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now())
}






// DB Faisal
model dataKost{
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  kost          String
  category      String
  room          String
  description   String?
  location      String?
  imageUrl      String[]
  price         String
  url           String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now())
}